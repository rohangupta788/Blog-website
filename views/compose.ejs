<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" value="">
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" rows="5" placeholder="Write your post here"></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

